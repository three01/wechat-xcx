 .header {
  display: block;
  height: 160rpx;
}

.header image {
  vertical-align: middle;
  width: 100%;
  height: 160rpx;
}
.containerExchange {
  background-color: #d6d6d6;
  height: 100%;
} 

.currencyTitle {
  line-height: 26px;
  font-size: 12px;
  color: #666;
  text-indent: 15px;
}

.content {
  width: 100%; 
  height: 900px;
  background: #fff;
}
.swiper-tab{
  width: 100%; 
  text-align: center;
  line-height: 76rpx;
  padding: 4rpx 0 0;
  border-bottom: 2rpx #d8d8e0 solid;

} 
.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block; 
  color: #666666;
  margin: 0 40rpx;
}

.swiper-tab-list.on {
  color: #f25050;
  border-bottom: 4rpx solid #f25050;
} 
.swiper-box {
  display: block;
  height: 100%; 
  width: 100%;
  border-top:#f0eff5 20rpx solid;
} 
swiper-item{
  background: #f0eff5;
} 
.item{ 
  padding: 8rpx 40rpx; 
  background: #ffffff;
  position: relative; 
}
.item::after{
  content:"";
  display: block;
  clear: both;
}
.item::before{
  position: absolute;
  content: "";
  display: block;
  height: 2rpx;
  background-color: #d8d8e0;
  bottom: 0;
  left:20px;
  right:20px;
}
.item:last-child::before{
  height: 0; 
}
.itemLeft { 
  width: 300rpx;
  float: left; 
  box-sizing: border-box; 
} 
.itemRight {
  text-align: right;
  border: 0;
  font-size: 28rpx;
  color: #cccccc;
  margin: 0 0 0 310rpx;
  box-sizing: border-box;
  padding: 20rpx 0 0 0;
}
.itemLeftBox{
  float: left;
  border-right: #d8d8e0 1px solid;
  position: relative;
  padding: 20rpx 40rpx 20rpx 20rpx;
}
.itemLeftBox:first-child{
  padding-left: 0;
}
.itemLeftBox::after{
  content:"" ;
  display: inline-block;
  position: absolute;
  right: 10rpx;
  top:36rpx;
  color: #666; 
  width: 22rpx; 
  height: 22rpx;
  background-image: url(../../dist/image/arrowright.png);
  background-size: 100% 100%;
}
.itemLeftBox .flag {
  width: 40px;
  height: 27px;  
}
.itemLeftBox .description-text{
  font-size: 24rpx;
  color: #222222;
  width: 40px;
  text-align: center;
  padding: 10rpx 0 0;
}
.itemRight input{
  text-align: right;
  padding: 0;
  width: 100%;
  margin: 0 0 6rpx 0;
  font-size: 40rpx;
  color: #333;
}
.bgOrange{
    background-color: #fc720b;
    color: #ffffff;
    border-radius:3px;
    display: inline-block;
    vertical-align: middle;
    margin: 0 8rpx 0 0;
    padding: 4rpx;
    font-size: 22rpx;
}
.currencyDes{
    color: #999;
    margin-left: 12px;
    margin-top: 5px;
    font-size: 16px;
}

.currencyDesText{
    margin: 0 1%;
}

.calResult{
    font-size: 12px;
    color: #999;
    margin-left: 15px;
    line-height: 30px;
}

.calNum{
    color: #333;
}

.errorToast{
    text-align: center;
    color: #fff;
    padding: 10px;
    font-size: 12px;
    color: #fff;
} 